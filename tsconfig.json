{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext", // ✅ Оптимально для Vite 5
    "moduleResolution": "node16", // ✅ Совместимо с Vite 5 и поддерживает ESM
    "resolveJsonModule": true, // ✅ Корректно работает с `moduleResolution: "node16"`
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client"
    ] // ✅ Добавляет типы Vite в TypeScript
  },
  "include": [
    "src"
  ]
}